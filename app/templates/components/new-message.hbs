{{#if addNewMessage}}
  <h3>New Message</h3>
  <form>
    <div class="form-group">
      <label for="text">Text</label>
      {{input value=text id="text"}}
    </div>

    <div class="form-group">
      <label for="type">Type</label>
      {{input value=type id="type"}}
    </div>
    <button {{action 'saveMessage'}}>Save</button>
  </form>
{{else}}
  <button {{action 'messageFormShow'}}>New Message</button>
{{/if}}
